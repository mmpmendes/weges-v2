<MudGrid Class="py-3">
    <MudItem xs="6">
        <MudCard>
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText>
                        Certificado de Registo ERS
                        <MudButton OnClick="SetEditModeCertificado" StartIcon="@(_editModeCertificado ? Icons.Material.Filled.Block : Icons.Material.Filled.Edit)" />
                    </MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                @if (CertificadoErs is not null)
                {
                    <MudGrid>
                        <MudItem xs="12">
                            <MudTextField T="string" @bind-Text="CertificadoErs.NrCertificado" Label="Nº do certificado" Disabled="!_editModeCertificado" />
                        </MudItem>
                        <MudItem xs="12">
                            <MudTextField T="string" @bind-Text="CertificadoErs.Periodo" Label="Período" Disabled="!_editModeCertificado" />
                        </MudItem>
                        <MudItem xs="12">
                            <MudDatePicker T="DateTime?" @bind-Date="CertificadoErs.DataExpiracao" Label="Data de expiração" Disabled="!_editModeCertificado" />
                        </MudItem>
                        <MudItem xs="12">
                            <MudDatePicker T="DateTime?" @bind-Date="CertificadoErs.DataExpiracaoTaxa" Label="Data de expiração taxa" Disabled="!_editModeCertificado" />
                            <MudText>@CertificadoErs.DataExpiracaoTaxa</MudText>
                        </MudItem>
                        <MudItem xs="12">
                            <MudDatePicker T="DateTime?" @bind-Date="CertificadoErs.DataPagamentoTaxa" Label="Data de pagamento taxa" Disabled="!_editModeCertificado" />
                            <MudText>@CertificadoErs.DataExpiracaoTaxa</MudText>
                        </MudItem>
                        <MudItem xs="12">
                            @if (CertificadoErs.FicheiroId > 0)
                            {
                                <MudButton Variant="Variant.Outlined" Color="@Color.Primary" OnClick="DownloadCertificadoErs" EndIcon="@Icons.Material.Filled.Download">
                                    Download Ficheiro
                                </MudButton>
                            }
                            else
                            {
                                <FileUploadButton SelectedFileChanged="OnCertificadoFileSelected" Label="Carregar Ficheiro" Disabled="!_editModeCertificado" />
                            }
                        </MudItem>
                        <MudItem xs="12">
                            <MudButton OnClick="UploadCertificado" Disabled="@(!(IsCertificadoFileSelected || _editModeCertificado))" Color="@Color.Dark" Variant="Variant.Filled">Guardar Certificado</MudButton>
                        </MudItem>
                    </MudGrid>
                }
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="6">
        <MudCard>
            <MudCardHeader>
                <MudText>Licença de Funcionamento ERS<MudButton OnClick="SetEditModeLicenca" StartIcon="@(_editModeLicenca ? Icons.Material.Filled.Block  : Icons.Material.Filled.Edit)" /></MudText>
            </MudCardHeader>
            <MudCardContent>

                @if (LicencaErs is not null)
                {
                    <MudGrid>
                        <MudItem xs="12">
                            <MudTextField T="string" @bind-Text="LicencaErs.NrLicenca" Label="Nº de Licença" Disabled="!_editModeLicenca"/>
                        </MudItem>
                        <MudItem xs="12">
                            <MudTextField T="string" @bind-Text="LicencaErs.Observacoes" Label="Observações" Disabled="!_editModeLicenca" />
                        </MudItem>
                        <MudItem xs="12">
                            @if (LicencaErs.FicheiroId > 0)
                            {
                                <MudButton Color="@Color.Dark" Variant="Variant.Outlined" OnClick="DownloadLicencaErs" EndIcon="@Icons.Material.Filled.Download">
                                    Download Ficheiro
                                </MudButton>
                            }
                            else
                            {
                                <FileUploadButton SelectedFileChanged="OnLicencaFileSelected" Label="Carregar Ficheiro" Disabled="!_editModeLicenca" />
                            }
                        </MudItem>
                        <MudItem xs="12">
                            <MudButton OnClick="UploadLicenca" Disabled="@(!IsLicencaFileSelected && !_editModeLicenca)" Color="@Color.Dark" Variant="Variant.Filled">Guardar Licença</MudButton>
                        </MudItem>
                    </MudGrid>
                }
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>