@page "/Estabelecimentos/{EstabelecimentoId:long}/Servico"
@page "/Estabelecimentos/{EstabelecimentoId:long}/Servico/{ServicoId:long}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Serviço</PageTitle>
<MudGrid Class="py-3 px-3">
    <MudItem xs="12">
        <MudText Typo="Typo.h6">Serviço</MudText>
    </MudItem>

    @if (Servico == null)
    {
        <MudItem xs="6">
            <MudText>Carregando...</MudText>
        </MudItem>
    }
    else
    {
        <MudItem xs="12">
            <MudTextField T="string" @bind-Text="Servico.Nome" Label="Nome" />
        </MudItem>
        <MudItem xs="12">
            <MudDatePicker T="string" Date="Servico.DataInicio" Label="Nome" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField T="string" @bind-Text="Servico.Responsavel" Label="Diretor de Serviço" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField T="string" @bind-Text="Servico.Tipologia" Label="Tipologia" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField T="string" @bind-Text="Servico.Horario" Label="Horário" />
        </MudItem>
        <MudItem xs="12">
            <MudTextField T="string" @bind-Text="Servico.Observacoes" Label="Observações" />
        </MudItem>
    }
    <MudItem xs="12">
        <SaveBackControl OnClickSaveEventHandler="SaveServico" OnClickBackEventHandler="GoBackToEstabelecimento" />
    </MudItem>
</MudGrid>