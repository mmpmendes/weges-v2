@page "/tipologias"
@using SharedKernel.DTO
@* @attribute [Authorize] *@

<PageTitle>Tipologias</PageTitle>

<MudDataGrid @ref="TipologiasGrid"
             T="TipologiaDto"
             ServerData="TipologiasDataProvider"
             Filterable="true"
             Groupable="false">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Tipologias</MudText>
        <MudButton Color="Color.Primary" OnClick="@AddTipologia">
            <MudIcon Color="@Color.Primary" Icon="@Icons.Material.Filled.Add" />
        </MudButton>
    </ToolBarContent>
    <Columns>
        <TemplateColumn T="TipologiaDto">
            <CellTemplate>
                <MudButton Size="@Size.Small" Variant="@Variant.Filled" Color="@Color.Primary" OnClick="@(()=>NavigateToDetails(context.Item.Id))" EndIcon="@Icons.Material.Filled.Edit">Selecionar</MudButton>
            </CellTemplate>
        </TemplateColumn>
        <PropertyColumn Property="x => x.Nome" Title="Nome" />
    </Columns>
    <PagerContent>
        <MudDataGridPager T="TipologiaDto" />
    </PagerContent>
</MudDataGrid>